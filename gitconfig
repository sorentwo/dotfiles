[core]
  editor = nvim
  excludesfile = ~/.gitignore
[user]
  name = Parker Selbert
  email = parker@sorentwo.com
[color]
  ui = true
  diff = auto
  status = auto
  branch = auto
[merge]
  tool = opendiff
[alias]
  a    = add -A
  aa   = !git add -A . && git status
  bd   = branch -d
  cob  = checkout -b
  cor  = !sh -c 'git checkout -b $1 origin/$1' -
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  ir   = !git rebase -i origin/master
  mf   = merge --no-ff
  rmb  = !sh -c 'git branch -D $1 && git push origin :$1' -
  rpo  = remote prune origin
  st   = status -sb
  sur = submodule update --remote
  up   = !git fetch origin master && git rebase origin/master && git fetch -p origin
  who  = shortlog -n -s --no-merges
[format]
  pretty = oneline
[github]
	user = sorentwo
[push]
	default = simple
[heroku]
	account = sorentwo
